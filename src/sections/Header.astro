---
import { UserButton } from "@clerk/astro/components";


---
<header class="w-full h-15 bg-transparent backdrop-blur-md  sticky top-0 flex items-center justify-between p-2 border-b-1 border-sky-950 max-w-6xl mx-auto">
  <h1 class="text-white font-bold text-2xl flex items-center">Hackaton Clerk</h1>
  <ul class="text-white flex gap-4 text-xl items-center">
    <li>Inicio</li>
    <li>Search</li>
    <li>About</li>
    <button
      class="theme-toggle--reversed cursor-pointer"
      type="button"
      id="btnTheme"
      title="Toggle theme"
      aria-label="Toggle theme"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        aria-hidden="true"
        width="1em"
        height="1em"
        fill="currentColor"
        class="theme-toggle__inner-moon"
        viewBox="0 0 32 32"
      >
        <path d="M27.5 11.5v-7h-7L16 0l-4.5 4.5h-7v7L0 16l4.5 4.5v7h7L16 32l4.5-4.5h7v-7L32 16l-4.5-4.5zM16 25.4a9.39 9.39 0 1 1 0-18.8 9.39 9.39 0 1 1 0 18.8z" />
        <circle cx="16" cy="16" r="8.1" />
      </svg>
    </button>
    <UserButton  class:list={'text-white'}/>
  </ul>
</header>

<script>
  document.getElementById('btnTheme')!.addEventListener('click', () => {
    document.getElementById('btnTheme')!.classList.toggle('theme-toggle--reversed');
  });
</script>