---
import { lenguajes } from "../data/lenguajes"
import JsIcon from "../assets/icons/lenguajes/javascript.svg"
import NodeIcon from "../assets/icons/lenguajes/nodejs.svg"
---
<aside class="mt-5 p-4 sticky top-20 border rounded-md border-light-terciario dark:border-dark-terciario">
  <h3 class=" font-bold">Publicaciones por Lenguajes</h3>
  <ul class="flex flex-wrap gap-1 mt-4">
    <!-- <a href="#"><li class={`text-${lenguaje.color} flex items-center gap-2`}><div class={`size-2 bg-${lenguaje.color} rounded-full`}></div> #{lenguaje.name}</li></a> -->
    {
      lenguajes.map(lenguaje => 
        <a href="#" class={`w-fit ${lenguaje.color} px-2 py-1 rounded-sm  flex items-center gap-1 `}>
          <NodeIcon class={"size-5"} />
          <p class="font-bold">{lenguaje.name}</p>
          <span class="  px-2 rounded-full hover:bg-gray-100/30">81</span> 
        </a>
      )
    }
    
  </ul>
</aside>
